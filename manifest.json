{
  "manifest_version": 2,
  "name": "Zen Copy Toast",
  "version": "1.0",
  "description": "Shows a toast notification when text is copied, styled with Zen workspace colors",
  "icons": {
    "48": "icons/zencopy.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "permissions": ["clipboardRead"]
}
